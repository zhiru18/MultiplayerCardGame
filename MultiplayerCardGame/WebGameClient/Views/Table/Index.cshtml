@model List<WebGameClient.Models.GameTable>
@{
    ViewBag.Title = "Index";
}

<style>
    table tr:not(:first-child) {
        cursor: pointer;
        transition: all .25s ease-in-out;
    }

        table tr:not(:first-child):hover {
            background-color: lawngreen;
        }
</style>

<h2>Game Tables</h2>
<form action="/Table/Index" method="post">
    <input id="InputTableName" name="InputTableName" type="text" />
    <input type="submit" value="Search table name" />
</form>

Game Table ID:
<input type="text" name="gameTableID" id="gameTableID">
<br>
<br>
Available:
<input type="text" name="isFull" id="isFull">
<br>
<br>
Game Table Name:
<input type="text" name="gameTableName" id="gameTableName">
<br>
<br>
Users:
<input type="text" name="users" id="users">
<br>
<br>

@if (ViewBag.Situation < 1) {
    <table id="table" border="1">
        <tr>
            <th>Game Table ID</th>
            <th>Available</th>
            <th>Game Table name</th>
            <th>Number of players</th>
        </tr>
        <tr>
            @foreach (WebGameClient.Models.GameTable item in Model) {
            <tr>
                <td>@item.Id</td>
                <td>@item.IsFull</td>

                <td>@item.TableName</td>
                <td>@item.Users.Count</td>
            </tr>
        }
        </table>
        <script>
            var table = document.getElementById('table');
            for (var i = 1; i < table.rows.length; i++) {
                table.rows[i].onclick = function () {
                    //rIndex = this.rowIndex;
                    document.getElementById("gameTableID").value = this.cells[0].innerHTML;
                    document.getElementById("isFull").value = this.cells[1].innerHTML;
                    document.getElementById("gameTableName").value = this.cells[2].innerHTML;
                    document.getElementById("users").value = this.cells[3].innerHTML;
                };
            }
        </script>
    } else if (ViewBag.Situation == 2) {
        List<WebGameClient.Models.CGUser> users = Model[0].Users;
        <h2>Found Game Table: @Model[0].TableName</h2>
        foreach (WebGameClient.Models.CGUser item in users) {
            <h3>Players on table: @item.UserName</h3>
        }
    }

<div>
    <input type="button" style="float:left; width: 20%; background-color:lawngreen" value="Join Game Table" onclick="location.href='@Url.Action("Join","Table")'" />
</div>




